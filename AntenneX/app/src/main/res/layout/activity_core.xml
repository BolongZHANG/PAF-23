<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <SurfaceView
        android:id="@+id/cameraview"


        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Pour la jauge -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.example.mous.antennex.augmentedReality.GaugeView
            android:id="@+id/gaugeView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:rotation="90"

            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/gaugeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:rotation="90"

            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView_layout"
        >

        <!-- j'ai mis cameraTextView pour descriptionTextView -->
        <TextView


            android:id="@+id/cameraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#99000000"
            android:textColor="#FFFFFF"
            android:text="Informations supplÃ©mentaires"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:rotation="90"/>

        <TextView
            android:id="@+id/debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#99000000"
            android:textColor="#FFFFFF"
            android:text="Debug"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:rotation="90"/>

        <!--<ImageView
            android:id="@+id/wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wallpaper_ellipse2" />
    -->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <!--   android:src="@android:drawable/sym_def_app_icon"-->

        <!--android:layout_marginBottom="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"-->


        <Button
            android:id="@+id/cameraButton"
            android:background="@drawable/circle_round"
            android:layout_width="60sp"
            android:layout_height="60sp"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/buttonMaps"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="15dp"
        android:rotation="90"
        app:srcCompat="@drawable/maps" />

    <ImageView
        android:id="@+id/buttonProximity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonMaps"
        android:layout_marginTop="12dp"
        android:rotation="90"
        app:srcCompat="@drawable/proxy" />





</RelativeLayout>